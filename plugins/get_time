# How many seconds in a minute minus one
t_scale="60"
s_scale="1"
m_scale="$((t_scale/s_scale))"

get_seconds_offset() {
	a=$(date +%S)
#	if [ "${a:0:1}" = "0" ]; then
#		a="${a:1}"
#	fi
	a="$((t_scale-a))"
	prf "$(((a/s_scale)+2))"
}

sync_time_update() {
	a=$(date +%S)
#	if [ "${a:0:1}" = "0" ]; then
#		a="${a:1}"
#	fi
	if [ "$a" -gt "5" ]; then
		m_scale="$(((t_scale-a+2)/s_scale))"
	elif [ "$a" -gt "2" ]; then
		m_scale="$((m_scale-1))"
	else
		m_scale="$((t_scale/s_scale))"
	fi
}
