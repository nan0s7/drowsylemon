#!/bin/sh
m=$(date +%M)
d=$(date '+%a %b %d, %H')
printf "%%{c}$d:$m\n"
sleep $((61-$(date +%-S)))
while true; do
	m=$(($(date +%-M)-1))
	d=$(date '+%a %b %d, %H')
	while [ $m -lt 9 ]; do
		m=$((m+1))
		printf "%%{c}$d:0$m\n"
		sleep 60
	done
	while [ $m -lt 59 ]; do
		m=$((m+1))
		printf "%%{c}$d:$m\n"
		sleep 60
	done
done
