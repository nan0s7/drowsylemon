#!/bin/sh
d=$(date '+%a %b %d, %H:%M')
m=${d#*:}; d=${d%:*}
printf "%%{c}$d:$m\n"
sleep $((61-$(date +%-S)))
while true; do
	d=$(date '+%a %b %d, %H:%-M')
	m=${d#*:}
	d=${d%:*}
	while [ $m -lt 9 ]; do
		printf "%%{c}$d:0$m\n"
		m=$((m+1))
		sleep 60
	done
	while [ $m -lt 59 ]; do
		printf "%%{c}$d:$m\n"
		m=$((m+1))
		sleep 60
	done
done
