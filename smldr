#!/bin/sh
u(){ printf %s\\n "%{c}$(date '+%a %b %d, %H:')$p$j";}
j=$(date +%-M) p="0";if [ $j -gt 9 ];then p="";fi
u;sleep $((60-$(date +%-S)+1))
p="0";while [ $j -lt 8 ];do
j=$((j+1)) u;sleep 60
done
p="";while [ $j -lt 58 ];do
j=$((j+1)) u;sleep 60
done;j=0
while true;do
p="0";while [ $j -lt 8 ];do
j=$((j+1)) u;sleep 60
done
p="";while [ $j -lt 58 ];do
j=$((j+1)) u;sleep 60
done;j=$(date +%-M)
done
